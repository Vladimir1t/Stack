#include "StackCtor.h"

void StackCtor (struct Stack* st)
{
    //size_t st.capacity = 0;
    printf ("write a capacity of the Stack:\n");
    while (scanf  ("%d", &(st->capacity) != 1);
        printf ("Error. try again\n");
    st->data = (int*) calloc (st->capacity, sizeof(int));

    printf ("write a size of the Stack:\n");
    while (scanf ("%d", &(st->size)) != 1)
        printf ("Error. try again\n");
    while (st->size > st->capacity)
    {
        printf ("Error. Size > Capacity\n"); 
    }
    for (int i = 0; i < st->size; i++)
    {
        while (scanf ("%d", &(st->data[i])) != 1)
            printf ("Error. try again\n");
        printf ("%d element = %d\n",i, st->data[i]);
    }

    printf ("Stack is constructed\n");
}
